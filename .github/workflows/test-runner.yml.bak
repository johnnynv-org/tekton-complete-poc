name: Test Runner Connection

on:
  workflow_dispatch:
  push:
    branches: [ main ]

jobs:
  test:
    runs-on: swqa-tekton-poc-runner
    timeout-minutes: 2
    
    steps:
    - name: Simple test
      timeout-minutes: 1
      run: |
        echo "ðŸŽ¯ Runner is working!"
        echo "Current time: $(date)"
        echo "Current user: $(whoami)"
        echo "Current directory: $(pwd)"
        echo "Test completed successfully!"
        
    - name: Test kubectl
      timeout-minutes: 1
      run: |
        echo "Testing kubectl connection..."
        timeout 30 kubectl version --client
        timeout 30 kubectl config current-context
        timeout 30 kubectl get nodes
        echo "kubectl test completed!"
